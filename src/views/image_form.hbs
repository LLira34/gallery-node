</div>

<script>
    function show() {
        var file = document.getElementById("file").files[0];
        var reader = new FileReader();
        if (file) {
            reader.readAsDataURL(file);
            reader.onloadend = function () {
                document.getElementById("img-selected").src = reader.result;
            }
        }
    }
</script>